@page "/search"

<label>Search</label>
<div class="container-fluid mb-5">
    <div class="row">
        <div class="col-9">
            <InputText @bind-Value="SearchTitle" />
        </div>
        <div class="col-3">
            <button @onclick="SearchOMBD">Submit</button>
        </div>
    </div>
</div>

@if (OMDBMovies is not null)
{
    foreach (var item in OMDBMovies)
    {
        <h4>@item.Title (@item.Year)</h4>
       <br />
    }
}